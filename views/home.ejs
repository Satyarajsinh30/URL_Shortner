<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <title>Home</title>
  </head>
  <body>
    <div class="container">
      <h1>URL Shortner</h1>
      <div>
        <form action="/url" method="post" class="my-5 form-inline">
          <label class="sr-only">Enter URL</label>
          <input
            required
            type="text"
            name="url"
            placeholder="URL"
            class="form-control col mr-2"
          />
          <button class="btn btn-success" type="submit">submit</button>
        </form>
      </div>
      <div>
        <table class="table table-striped">
          <thead>
            <th>URL</th>
            <th>Short ID</th>
            <th>clicks</th>
          </thead>
          <tbody>
            <% urls.forEach(url => { %>
            <tr>
              <td>
                <a href="<%= url.redirectUrl %>"><%= url.redirectUrl %></a>
              </td>
              <td>
                <a href="home/<%= url.shortId%>" target="_blank"
                  ><%= url.shortId%></a
                >
              </td>
              <td><%= url.visitHistory.length %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <% if (user.role==="ADMIN") { %>
      <form action="/home/admin/urls" method="get">
        <button
          class="btn btn-success"
          type="submit"
          style="display: block; margin: 0 auto; width: 50%"
        >
          Admin Panel
        </button>
      </form>
      <% } %>
    </div>
  </body>
</html>
